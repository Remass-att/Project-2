        }
        
        body {
            background-color: #f5f6fa;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }
        
        .calculator {
            width: 320px;
            background-color: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        
        .display {
            background-color: var(--dark);
            color: white;
            padding: 20px;
            text-align: right;
            position: relative;
        }
        
        .current-operation {
            font-size: 1.5rem;
            color: rgba(255, 255, 255, 0.7);
            min-height: 24px;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        
